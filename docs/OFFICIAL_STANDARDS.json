{
  "version": "1.4",
  "last_updated": "2024-01-25",
  "platform_name": "Gold Investment Platform",
  "standard_definitions": {
    "core_entities": {
      "User": {
        "description": "Main user entity with authentication details",
        "required_fields": ["email", "password_hash", "kyc_status", "two_factor_enabled"]
      },
      "EuroAccount": {
        "description": "Euro balance management",
        "precision": "Decimal(10,2)",
        "validation_rules": {
          "min_balance": 0,
          "max_transaction": 100000
        }
      },
      "GoldAccount": {
        "description": "Gold balance management",
        "precision": "Decimal(10,4)",
        "validation_rules": {
          "min_balance": 0,
          "max_transaction": 1000
        }
      },
      "GoldTrace": "Gold-Euro conversion registry",
      "GoldAllocation": "User gold allocation management",
      "GoldBar": "Physical gold bars registry",
      "BonusTransaction": "Bonus and rewards management",
      "GoldPrize": "Gold rewards system",
      "NobleRelation": "Noble ranks management",
      "KYCDetails": {
        "description": "User identity verification",
        "document_types": ["passport", "id_card", "drivers_license"],
        "status_types": ["pending", "approved", "rejected"]
      },
      "Parameter": "System configuration parameters"
    },
    "monitoring": {
      "PerformanceMonitor": "System performance and metrics monitoring",
      "BlockchainMonitor": "Blockchain transactions and gas monitoring",
      "TransformationMonitor": "Gold-to-euro transformations monitoring",
      "AsyncMonitor": "Asynchronous operations monitoring",
      "DependencyMonitor": "System dependencies monitoring",
      "SecurityMonitor": "System security monitoring"
    },
    "metrics": {
      "performance": {
        "database_response": "50ms",
        "api_response": "150ms",
        "transaction_processing": "1.5s",
        "security_checks": "30ms",
        "weekly_transformation": "5m"
      },
      "spread": {
        "base": "5.0",
        "additional": "1.7"
      },
      "noble_bonus": {
        "bronzo": "0.7",
        "argento": "0.5",
        "oro": "0.5"
      }
    },
    "states_and_types": {
      "AccountStatus": ["active", "suspended", "verifying"],
      "OperationType": ["gold_purchase", "gold_sale", "gold_transfer"],
      "OperationStatus": ["pending", "in_progress", "completed", "failed"],
      "ValidationStatus": ["pending", "approved", "rejected"],
      "NobleRank": ["bronze", "silver", "gold"]
    },
    "services": {
      "core": {
        "AccountManagementService": "Account operations management",
        "TransformationService": "Euro-gold conversion management",
        "BlockchainService": "Blockchain transactions management",
        "NobleService": "Noble system management",
        "NotificationService": "Notification system",
        "KYCService": "Customer identity verification",
        "AnalyticsService": "System metrics analysis"
      },
      "validators": {
        "TransactionValidator": "Financial operations validation",
        "BlockchainValidator": "Blockchain transactions validation",
        "BonusValidator": "Bonus calculation validation",
        "NobleValidator": "Noble ranks validation",
        "KYCValidator": "Identity document validation",
        "StructureValidator": "Data structure validation"
      }
    },
    "monitors": {
      "PerformanceMonitor": "Monitoring system performance and metrics",
      "BlockchainMonitor": "Blockchain transactions monitoring",
      "AsyncMonitor": "Asynchronous operations monitoring",
      "DependencyMonitor": "System dependencies monitoring",
      "SecurityMonitor": "System security monitoring",
      "MetricsCollector": {
        "description": "Standardized metrics collection",
        "metrics": {
          "response_times": "System response times",
          "transaction_count": "Transaction count",
          "error_rate": "System error rate",
          "gas_usage": "Blockchain gas consumption",
          "block_times": "Block confirmation times",
          "memory_usage": "System memory consumption",
          "cpu_load": "CPU usage metrics"
        }
      }
    },
    "formats": {
      "GoldPrecision": "Decimal(10,4)", 
      "EuroPrecision": "Decimal(10,2)",
      "IBANFormat": "String(27)",
      "CustomerCodeFormat": "String(10)",
      "TimestampFormat": "ISO-8601"
    },
    "system_constants": {
      "OperationLimits": {
        "min_purchase_amount": 100,
        "max_purchase_amount": 100000,
        "min_sale_amount": 1,
        "max_sale_amount": 50000
      },
      "BatchIntervals": {
        "processing": 3600,
        "backup": 86400,
        "cleanup": 604800
      }
    },
    "security_standards": {
      "password_policy": {
        "min_length": 12,
        "require_special": true,
        "require_numbers": true,
        "require_uppercase": true
      },
      "due_diligence": {
        "document_types": ["identity_card_front", "identity_card_back", "tax_id", "utility_bill"],
        "verification_timeframe": {
          "document_review": 48,
          "iban_verification": 72,
          "contract_processing": 48
        },
        "iban_validation": {
          "test_transfer_required": true,
          "min_test_amount": 0.01,
          "max_test_amount": 1.00
        },
        "payment_settings": {
          "min_monthly_amount": 100,
          "max_monthly_amount": 10000,
          "sepa_required": true
        }
      },
      "rate_limits": {
        "api_requests": 50,
        "login_attempts": 5,
        "window_seconds": 60,
        "implementation": "RobustRateLimiter",
        "fallback": "local_storage",
        "storage": "redis_primary"
      }
    },
    "noble_system": {
      "ranks": {
        "bronze": {
          "commission": 0.7
        },
        "silver": {
          "commission": 0.5
        },
        "gold": {
          "commission": 0.5
        }
      }
    },
    "transformation_rules": {
      "weekly_schedule": "Sunday 23:59 UTC",
      "spread": {
        "base": 5.0,
        "operational": 1.7
      },
      "minimum_amount": 100,
      "maximum_amount": 100000
    }
  },
  "checksum": "SHA256"
}