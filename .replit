run = """
nix-env --upgrade || echo 'nix-env failed'
rm -rf ~/.cache/nix
nix-collect-garbage --delete-old
replit nix run || echo 'nix run failed'
python3 main.py
"""

run = ["python3", "main.py"]
language = "python3"
entrypoint = "main.py"
hidden = [".pytest_cache", "__pycache__", "*.pyc"]
modules = ["python-3.11"]

[deployment]
run = ["python3", "main.py"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 5000

[nix]
channel = "stable-24_05"
